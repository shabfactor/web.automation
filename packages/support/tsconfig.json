{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "types": [
            "node",
            "chai",
            "webdriverio/sync",
            "wdio-image-comparison-service"
        ]
    },
    "exclude": [
        "./node_modules"
    ],
    "compileOnSave": true
}